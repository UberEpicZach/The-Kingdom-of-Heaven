### Tournament Activity Intents

win_contest_intent = {
	icon = win_contest_intent

	is_shown = {
		is_adult = yes
		trigger_if = {
			limit = {
				NOT = { exists = involved_activity }
			}
			is_healthy = yes
		}
	}

	on_invalidated = {
		trigger_event = activity_system.0090
	}

	ai_will_do = {
		value = 50
		if = {
			limit = { has_trait = arrogant }
			add = 50
		}
		add = prowess
	}

	scripted_animation = {
		animation = wrestling_victory
	}
}


recruit_knights_intent = {
	icon = recruit_knights_intent

	is_shown = {
		is_landed = yes
		max_number_of_knights >= 1
	}

	on_invalidated = {
		trigger_event = activity_system.0090
	}

	ai_will_do = {
		value = 0
		if = {
			limit = {
				number_of_knights < max_number_of_knights
			}
			add = 200
		}
	}

	scripted_animation = {
		animation = steward
	}
}

